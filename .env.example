# Docker Compose & Local Development Environment Variables
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
# Docker Compose will use: postgresql://selino_user:selino_pass@db:5432/selino
# Local development uses: DATABASE_URL as-is
DATABASE_URL=postgresql://selino_user:selino_pass@localhost:5432/selino
POSTGRES_DB=selino
POSTGRES_USER=selino_user
POSTGRES_PASSWORD=selino_pass
POSTGRES_PORT=5432
POSTGRES_TEST_DB=selino_test
POSTGRES_TEST_PORT=5433

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN_DAYS=30

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# RabbitMQ
# Docker Compose will use: amqp://selino_rmq:selino_rmq_pass@rmq:5672
# Local development uses: RABBITMQ_URI as-is
RABBITMQ_URI=amqp://selino_rmq:selino_rmq_pass@localhost:5672
RABBITMQ_USER=selino_rmq
RABBITMQ_PASS=selino_rmq_pass
RABBITMQ_PORT=5672
RABBITMQ_CONSOLE_PORT=15672

# SMS (set SMS_PROVIDER to kavenegar | smsir | console)
SMS_PROVIDER=console
KAVENEGAR_API_KEY=
KAVENEGAR_SENDER=
SMSIR_API_KEY=
SMSIR_LINE_NUMBER=
SMSIR_VERIFY_TEMPLATE_ID=
SMSIR_VERIFY_CODE_PARAM=

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@selino.local

# Provider connection (one set, shared across all buckets)
STORAGE_ENDPOINT=               # blank for AWS, URL for everything else
STORAGE_REGION=
STORAGE_ACCESS_KEY_ID=
STORAGE_SECRET_ACCESS_KEY=
STORAGE_FORCE_PATH_STYLE=       # true for self-hosted/third-party, false for AWS
STORAGE_PUBLIC_URL_BASE=        # base URL for constructing public file URLs

# One env var per bucket â€” just the bucket name in the provider
STORAGE_BUCKET_PRODUCT_MEDIA=
STORAGE_BUCKET_PROFILE_MEDIA=